/**index.wxss**/
page{
  height: 100%;
  background-color: #f0eff5;
}
.container {
  margin:0 auto;
  height: 100%;
  width:100%;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 40rpx auto 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #aaa;
  font-size:30rpx;
}
.today-date {
  background-color: #d2d2d4;
  padding:8rpx 15rpx;
  border-radius: 10rpx;
  color: #fffeff;
  font-size: 30rpx;
  font-weight:bold;
  margin-top: 30rpx;
}
.main{
  width:90%;
}
.main .panel{
  margin-top:100rpx;
  width:100%;
  border:2rpx solid #c5c5c7;
  border-radius: 15rpx;
  background-color: #fafafa;
}
.panel .title{
  color: #505050;
  font-size: 30rpx;
  position: relative;
  top:-60rpx;

}
.sign{
  display: flex;
  justify-content: space-between;
}
.sign .sign-info{
  width: 220rpx;
  color: #1db405;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.sign .sign-info .day-num{
  font-size: 60rpx;
  font-weight: bold;
}
.sign .sign-info .day-info{
  font-size: 27rpx;
  margin-top: 16rpx;
}
.sign button{
  width: 340rpx;
  line-height:inherit;
  display: flex;
  justify-content: center;
  align-items: center;
}
.box .rank{
  border-top:2rpx solid #e7e7e7;
  margin:50rpx 20rpx 0rpx;
  font-size: 31rpx;
}
.box .rank navigator{
  display: flex;
  justify-content: space-between;
  padding: 30rpx 10rpx;
}
.box .rank .arrow-right{
  width: 32rpx;
  height:32rpx;
  vertical-align: middle;
}