/**index.wxss**/
page{
  height: 100%;
  background-color: #f0eff5;
}
.container {
  height: 100%;
  width:90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.today-date {
  margin-top: 40rpx;
  color: #1db405;
  font-weight:bold;
}
.sign button{
  margin-top: 150rpx;
  width: 300rpx;
}