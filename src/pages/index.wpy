<script>
  import wepy      from 'wepy';
  import Toast     from 'wepy-com-toast';
  import _get      from 'lodash.get';
  import moment    from 'moment';

  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '‰∫≤ÂØÜ‰π†ÊÉØ'
    }
    components = {
      toast: Toast
    }

    data = {
      habits: [],
      myTodayTotalScore: 0,
      weekTotalScore: 0
    }

    methods = {
      finishHabit(habitId) {
        let self = this;
        wepy.request({
          url: 'http://localhost:4000/api/checkIn',
          method: 'POST',
          data: {
            openId: '88888888',
            code: '88888888',
            habitId: habitId
          },
          success: function ({ data }) {
            if (data.success) {
              self.onLoadHabits();
            }
          }
        });
      }
    }

    onLoadHabits() {
      let self = this;
      const date = moment().format('YYYY-MM-DD');
      wepy.request({
        url: 'http://localhost:4000/api/day',
        data: {
          openId: '88888888',
          code: '88888888',
          date
        },
        success: function ({ data }) {
          self.habits = _get(data, 'data.habitsList') || [];
          self.myTodayTotalScore = _get(data, 'data.todayTotalScore') || 0;
          self.weekTotalScore = _get(data, 'data.weekTotalScore') || 0;
          self.$apply();
        }
      });
    }

    onLoad() {
      let self = this;
      this.$parent.getUserInfo(function (userInfo) {
        if (userInfo) {
          self.userInfo = userInfo;
        }
        self.$apply();
      });
      this.onLoadHabits();
    }
  }
</script>
