            <view class="score">üíØ {{habit.score}}ÂàÜ</view>
          </view>
          <button wx:if="{{habit.status !== 'finish'}}" class="habit-btn left" @tap="finishHabit({{habit.id}})">‚ö° ÂÆåÊàê‚ö°</button>
          <view wx:if="{{habit.status === 'finish'}}" class="finish left">
